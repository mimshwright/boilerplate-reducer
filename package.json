{
  "name": "boilerplate-reducer",
  "version": "0.1.0",
  "description": "Generate common scenarios for actions and reducers such as CRUD actions.",
  "keywords": "redux, reducer, action, action-creator, generic, flux, boilerplate",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mimshwright/boilerplate-reducer"
  },
  "bugs": {
    "url": "https://github.com/mimshwright/boilerplate-reducer/issues"
  },
  "author": "Mims H. Wright",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-core": "^6.21.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "standard": "^8.6.0",
    "tap-spec": "^4.1.1"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "redux-actions": "^1.2.1"
  },
  "optionalDependencies": {
    "nyc": "^10.1.2",
    "yarn": "^0.19.1"
  },
  "scripts": {
    "lint": "standard './*.js' './src/**/*.js'",
    "fix": "standard --fix './*.js' './src/**/*.js'",
    "test:only": "ava",
    "test": "npm run lint & npm run coverage",
    "watch:test": "npm run lint & ava --watch",
    "coverage": "nyc npm run test:only",
    "build": "babel src/main.js -o lib/main.js",
    "prepublish": "npm run lint && npm run test && npm run build",
    "start": "npm run fix && npm run test && npm run watch"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.{js,jsx}"
    ],
    "concurrency": 20,
    "failFast": false,
    "tap": false,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
